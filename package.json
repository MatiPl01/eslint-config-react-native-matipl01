{
  "name": "eslint-config-react-native-matipl01",
  "description": "eslint config for React Native projects",
  "version": "2.1.0",
  "author": "Mateusz Łopaciński <lop.mateusz.2001@gmail.com>",
  "dependencies": {
    "@types/jest": "^29.5.12",
    "@typescript-eslint/eslint-plugin": "^7.7.0",
    "@typescript-eslint/parser": "^7.7.0",
    "@typescript-eslint/types": "^7.7.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-markdown": "^4.0.1",
    "eslint-plugin-no-relative-import-paths": "^1.5.4",
    "eslint-plugin-perfectionist": "^2.9.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-native": "^4.1.0",
    "eslint-plugin-simple-import-sort": "^12.1.0",
    "eslint-plugin-unused-imports": "^3.1.0",
    "prettier": "^3.2.5"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^12.0.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^10.0.3",
    "@semantic-release/npm": "^12.0.0",
    "@semantic-release/release-notes-generator": "^13.0.0",
    "eslint": "^9.1.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "semantic-release": "^23.0.8",
    "syncpack": "^12.3.0"
  },
  "files": [
    "index.js",
    "CHANGELOG.md",
    "LICENSE",
    "README.md",
    "tsconfig.base.json"
  ],
  "homepage": "https://github.com/MatiPl01/eslint-config-react-native-matipl01#readme",
  "license": "MIT",
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "yarn lint:fix",
      "yarn format:code"
    ],
    "package.json": [
      "syncpack format"
    ]
  },
  "main": "index.js",
  "packageManager": "yarn@4.1.1",
  "peerDependencies": {
    "eslint": ">=9.0.0",
    "typescript": ">=5.4.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": "https://github.com/MatiPl01/eslint-config-react-native-matipl01",
  "scripts": {
    "format:code": "prettier --write . --ignore-unknown",
    "format:deps": "syncpack format",
    "lint:fix": "eslint --fix .",
    "prepare": "husky install"
  },
  "type": "module"
}
