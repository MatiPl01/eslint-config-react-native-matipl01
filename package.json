{
  "name": "eslint-config-react-native-matipl01",
  "description": "eslint config for React Native projects",
  "version": "3.1.0",
  "author": "Mateusz Łopaciński <lop.mateusz.2001@gmail.com>",
  "dependencies": {
    "@eslint/eslintrc": "^3.1.0",
    "@eslint/js": "^9.7.0",
    "@types/jest": "^29.5.12",
    "@typescript-eslint/eslint-plugin": "^7.17.0",
    "@typescript-eslint/parser": "^7.17.0",
    "@typescript-eslint/types": "^7.17.0",
    "@typescript-eslint/utils": "^8.5.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-markdown": "^5.1.0",
    "eslint-plugin-no-relative-import-paths": "^1.5.5",
    "eslint-plugin-perfectionist": "^3.0.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-native": "^4.1.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-unused-imports": "^4.0.1",
    "prettier": "^3.3.3",
    "typescript-eslint": "^7.17.0"
  },
  "devDependencies": {
    "@babel/core": "^7.24.9",
    "@babel/preset-env": "^7.24.8",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^10.1.3",
    "@semantic-release/npm": "^12.0.1",
    "@semantic-release/release-notes-generator": "^14.0.1",
    "@types/eslint": "^9.6.0",
    "babel-jest": "^29.7.0",
    "babel-plugin-module-resolver": "^5.0.2",
    "eslint": "^9.7.0",
    "husky": "^9.1.2",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.7",
    "semantic-release": "^24.0.0",
    "syncpack": "^12.4.0",
    "typescript": "^5.5.4"
  },
  "files": [
    "index.js",
    "index.d.ts",
    "CHANGELOG.md",
    "LICENSE",
    "README.md",
    "tsconfig.base.json"
  ],
  "homepage": "https://github.com/MatiPl01/eslint-config-react-native-matipl01#readme",
  "license": "MIT",
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "bash -c 'tsc --noEmit'",
      "eslint --fix",
      "prettier --write --ignore-unknown"
    ],
    "package.json": [
      "syncpack format"
    ]
  },
  "main": "index.js",
  "packageManager": "yarn@4.1.1",
  "peerDependencies": {
    "eslint": ">=9.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": "https://github.com/MatiPl01/eslint-config-react-native-matipl01",
  "scripts": {
    "format:code": "prettier --write . --ignore-unknown",
    "format:deps": "syncpack format",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "prepare": "husky install",
    "test": "NODE_OPTIONS=\"$NODE_OPTIONS --experimental-vm-modules\" jest",
    "typecheck": "tsc -p tsconfig.json --noEmit"
  },
  "type": "module",
  "types": "index.d.ts"
}
