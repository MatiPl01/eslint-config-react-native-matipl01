{
  "name": "eslint-config-react-native-matipl01",
  "description": "eslint config for React Native projects",
  "version": "2.0.1",
  "author": "Mateusz Łopaciński <lop.mateusz.2001@gmail.com>",
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^6.7.3",
    "@typescript-eslint/parser": "^6.7.3",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-markdown": "^3.0.1",
    "eslint-plugin-no-relative-import-paths": "^1.5.2",
    "eslint-plugin-perfectionist": "^2.1.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-unused-imports": "^3.0.0",
    "prettier": "^3.0.3"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^11.0.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^9.0.7",
    "@semantic-release/npm": "^11.0.0",
    "@semantic-release/release-notes-generator": "^12.0.0",
    "husky": "^8.0.0",
    "lint-staged": "^15.0.1",
    "semantic-release": "^22.0.5",
    "semantic-release-cli": "^5.4.4",
    "syncpack": "^11.2.1"
  },
  "homepage": "https://github.com/MatiPl01/eslint-config-react-native-matipl01#readme",
  "license": "MIT",
  "lint-staged": {
    "package.json": [
      "syncpack format"
    ],
    "index.js": [
      "yarn eslint:rules:sort"
    ],
    "*.{js,jsx,ts,tsx}": [
      "yarn format:code"
    ]
  },
  "main": "index.js",
  "peerDependencies": {
    "eslint": ">=6.0.0",
    "typescript": ">=3.7.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": "https://github.com/MatiPl01/eslint-config-react-native-matipl01",
  "scripts": {
    "eslint:rules:sort": "node ./scripts/sort-eslint-rules.js",
    "format:code": "prettier --write . --ignore-unknown",
    "prepare": "husky install"
  }
}
